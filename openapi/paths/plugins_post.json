{
  "post": {
    "operationId": "UploadPlugin",
    "summary": "Upload plugin package",
    "requestBody": {
      "required": true,
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "file": {
                "type": "string",
                "format": "binary"
              },
              "tenant_scope": {
                "type": "string"
              },
              "tenants": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Optional list of tenant IDs for tenant-scoped widgets"
              }
            },
            "required": [
              "file"
            ]
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../schemas/PluginUploadResponse.json"
            }
          }
        }
      },
      "400": {
        "description": "Bad Request"
      },
      "403": {
        "description": "Forbidden"
      },
      "415": {
        "description": "Unsupported Media Type"
      },
      "422": {
        "description": "Unprocessable Entity"
      },
      "500": {
        "description": "Internal Server Error"
      }
    }
  }
}
